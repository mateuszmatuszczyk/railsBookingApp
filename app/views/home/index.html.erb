<h1 style="text-align: center;">Welcome to BarbersOnRails</h1>

<div class="blue content-box"> 
<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Customer number</th>
      <th>Customer photo path</th>
      <th>User Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_name %></td>
        <td><%= customer.customer_number %></td>
        <td><%= customer.customer_photo_path %></td>
        <td><%= customer.user.email %></td>
        <td><%= link_to 'Show', customer %></td>
        <!-- <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="red content-box"> 
<h1>Barbers</h1>

<table>
  <thead>
    <tr>
      <th>Barber name</th>
      <th>Barber bio</th>
      <th>Barber photo path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @barbers.each do |barber| %>
      <tr>
        <td><%= barber.barber_name %></td>
        <td><%= barber.barber_bio %></td>
        <td><%= barber.barber_photo_path %></td>
        <td><%= link_to 'Show', barber %></td>
       <!-- x -->
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div class="yellow content-box">
<h1>Services</h1>
<table>
  <thead>
    <tr>
      <th>Service name</th>
      <th>Service description</th>
      <th>Service duration</th>
      <th>Service price</th>
      <th>Barber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.service_name %></td>
        <td><%= service.service_description %></td>
        <td><%= service.service_duration %></td>
        <td><%= service.service_price %></td>
        <td><%= service.appointment.barber.barber_name %></td>
        <td><%= link_to 'Show', service %></td>
        <!-- <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<div class="green content-box">
    <h1>Appointments</h1>
<table>
  <thead>
    <tr>
      <th>Appointment time</th>
      <th>Appointment date</th>
      <th>Appointment duration</th>
      <th>Total cost</th>
      <th>Status</th>
      <th>Customer</th>
      <th>Barber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appointment_time %></td>
        <td><%= appointment.appointment_date %></td>
        <td><%= appointment.appointment_duration %></td>
        <td><%= appointment.total_cost %></td>
        <td><%= appointment.status %></td>
        <td><%= appointment.customer.customer_name %></td>
        <td><%= appointment.barber.barber_name %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<style>
.yellow{
  background: yellow;
}
.blue{
  background: blue;
}

.red{
  background: red;
}
.content-box{
  display:inline-block;
  margin:0 auto;
  text-align: center;
  padding:0;
  width:33.09%;
  height:300px;   
}
.green{
  margin-top:4px;
  background: green;
  width: 100%;
}
</style>