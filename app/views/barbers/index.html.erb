<p id="notice"><%= notice %></p>

<h1>Barbers</h1>

<table>
  <thead>
    <tr>
      <th>Barber name</th>
      <th>Barber bio</th>
      <th>Barber photo path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @barbers.each do |barber| %>
      <tr>
        <td><%= barber.barber_name %></td>
        <td><%= barber.barber_bio %></td>
        <td><%= barber.barber_photo_path %></td>
        <td><%= link_to 'Show', barber %></td>
        <td><%= link_to 'Edit', edit_barber_path(barber) %></td>
        <td><%= link_to 'Destroy', barber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
